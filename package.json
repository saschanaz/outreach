{
  "name": "webcompat-outreach",
  "version": "1.0.0",
  "devDependencies": {
    "@babel/core": "^7.11.5",
    "@storybook/addon-actions": "^6.0.21",
    "@storybook/addon-essentials": "^6.0.21",
    "@storybook/addon-links": "^6.0.21",
    "@storybook/svelte": "^6.0.21",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/svelte": "^3.0.0",
    "babel-loader": "^8.1.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "eslint": "^7.7.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "jest": "^26.4.2",
    "jest-transform-svelte": "^2.1.1",
    "mini-css-extract-plugin": "^0.6.0",
    "prettier": "^2.1.1",
    "prettier-plugin-svelte": "^1.2.0",
    "serve": "^11.0.0",
    "style-loader": "^0.23.1",
    "stylelint": "^13.7.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "svelte": "^3.24.1",
    "svelte-loader": "^2.13.6",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.3.1"
  },
  "dependencies": {
    "@octokit/rest": "^18.0.4",
    "xss": "^1.0.8"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "dev": "webpack-dev-server --content-base public",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "npx eslint \"{,!(node_modules|public)/**/}*.{js,svelte}\"",
    "lint:js:fix": "npx eslint --fix \"{,!(node_modules|public)/**/}*.{js,svelte}\"",
    "lint:css": "stylelint \"**/*.{css,html,js,md,mjs,svelte,svg,ts}\"",
    "lint:css:fix": "stylelint \"**/*.{css,html,js,md,mjs,svelte,svg,ts}\" --fix",
    "prettier": "npx prettier --write \"{,!(node_modules|public)/**/}*.{js,svelte}\"",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watchAll"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": "jest-transform-svelte"
    },
    "moduleFileExtensions": [
      "js",
      "svelte",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss|stylesheet)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/storybook-static/"
    ]
  }
}
